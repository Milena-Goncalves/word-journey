@page
@model projecto_iefp.Pages.LivrosModel
@using Newtonsoft.Json
@{
}

    

<table class="table table-striped table-dark" style="margin-top:60px; margin-bottom:60px;">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Título</th>
            <th scope="col">Autor</th>
            <th scope="col">Género</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var livro in Model.livros)
        {

            Dictionary<string, string> dictlivros =
            new Dictionary<string, string> { { "passedObject", JsonConvert.SerializeObject(livro) } };

            <tr>
                <th scope="row"> </th>
                <td>
                    <a asp-page="/Datails" asp-all-route-data="dictlivros">
                        @Html.DisplayFor(modelItem => livro.titulo)
                    </a>
                </td>


                <td>
                    @Html.DisplayFor(modelItem => livro.autor)

                </td>


                <td>
                    @Html.DisplayFor(modelItem => livro.genero)

                </td>
            </tr>
                }
        </tbody>
</table>
