<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - projecto_iefp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/projecto_iefp.styles.css" asp-append-version="true" />
</head>
<body>
    <header id="header" class="header d-flex align-items-center fixed-top">
    <div class="container-fluid d-flex align-items-center justify-content-between" style="height: 0px">
        <a href="/Index" class="logo d-flex align-items-center me-auto me-lg-0"> <i class="bi bi-book"></i>
        <h1>Word Journey</h1></a>
        <nav id="navbar" class="navbar">
            <ul>
                <li><a href="/Index" class="active">Inicio</a></li>
                <li><a href="/About">Sobre mim</a></li>
                <li class="dropdown">
                    <a href="/Livros"><span>Géneros</span> <i class="bi bi-chevron-down dropdown-indicator"></i></a>
                    <ul>
                        <li><a asp-page="/generos" asp-page-handler="Escolha" asp-route-genero="Thriller">Thriller</a></li>
                        <li><a asp-page="/generos" asp-page-handler="Escolha" asp-route-genero="Ficção Cientifica">Ficção</a></li>
                        <li><a asp-page="/generos" asp-page-handler="Escolha" asp-route-genero="Aventura">Aventura</a></li>
                        <li><a asp-page="/generos" asp-page-handler="Escolha" asp-route-genero="Comédia">Comédia</a></li>
                        <li><a asp-page="/generos" asp-page-handler="Escolha" asp-route-genero="Romance">Romance</a></li>
                        <li><a asp-page="/generos" asp-page-handler="Escolha" asp-route-genero="Terror">Terror</a></li>
                        <li><a asp-page="/generos" asp-page-handler="Escolha" asp-route-genero="Fantasia">Fantasia</a></li>
                        <li><a asp-page="/generos" asp-page-handler="Escolha" asp-route-genero="Drama">Drama</a></li>

                    </ul>
                </li>
                <li><a href="/Comentarios">Comentários</a></li>
                <li><a href="/Pedido">Pedido</a></li>
            </ul>
            </nav>
        <div class="header-social-links">
        <a href="https://github.com/Milena-Goncalves" class="instagram"><i class="bi bi-github"></i></a>
        <a href="https://www.linkedin.com/in/milenage/" class="linkedin"><i class="bi bi-linkedin"></i></a>
        </div>
        <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
        <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>
    </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer" class="footer">
        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span>PhotoFolio</span></strong>. All Rights Reserved
            </div>
        </div>
        <a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

        <div id="preloader">
            <div class="line"></div>
        </div>
    </footer><!-- End Footer -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

